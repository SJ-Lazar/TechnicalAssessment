@page "/"
@using ServicesLibrary.Groups.Dtos
@inject UserApiService UserApi
@inject IJSRuntime JS

<PageTitle>User Hub - Home</PageTitle>

<div class="user-management">
    <div class="header">
        <h1>User Management</h1>
        <div class="header-actions">
            <a href="/api-test" class="btn btn-secondary">🔧 API Test</a>
            <button class="btn btn-primary" @onclick="ShowAddUserModal">
                <span class="icon">+</span> Add User
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading">Loading users...</div>
    }
    else if (errorMessage != null)
    {
        <div class="error-message">
            <strong>Error:</strong> @errorMessage
            <button class="btn-close" @onclick="@(() => errorMessage = null)">×</button>
        </div>
    }
    else
    {
        <!-- Statistics Dashboard -->
        @if (statistics != null)
        {
            <div class="statistics-dashboard">
                <div class="stat-card">
                    <div class="stat-icon">👥</div>
                    <div class="stat-content">
                        <div class="stat-value">@statistics.TotalUsers</div>
                        <div class="stat-label">Total Users</div>
                    </div>
                </div>

                <div class="stat-card active">
                    <div class="stat-icon">✓</div>
                    <div class="stat-content">
                        <div class="stat-value">@statistics.ActiveUsers</div>
                        <div class="stat-label">Active Users</div>
                    </div>
                </div>

                <div class="stat-card inactive">
                    <div class="stat-icon">⏸</div>
                    <div class="stat-content">
                        <div class="stat-value">@statistics.InactiveUsers</div>
                        <div class="stat-label">Inactive Users</div>
                    </div>
                </div>

                <div class="stat-card deleted">
                    <div class="stat-icon">🗑</div>
                    <div class="stat-content">
                        <div class="stat-value">@statistics.DeletedUsers</div>
                        <div class="stat-label">Deleted Users</div>
                    </div>
                </div>
            </div>

            <!-- Users Per Group -->
            @if (statistics.UsersPerGroup.Any())
            {
                <div class="group-statistics">
                    <h2>Users Per Group</h2>
                    <div class="group-stats-grid">
                        @foreach (var (groupName, count) in statistics.UsersPerGroup.OrderByDescending(x => x.Value))
                        {
                            var groupId = availableGroups.FirstOrDefault(g => g.Name == groupName)?.Id ?? 0;
                            <div class="group-stat-item clickable" @onclick="@(() => ShowGroupDetails(groupId))">
                                <div class="group-name">@groupName 🔒</div>
                                <div class="group-count">
                                    <span class="count-value">@count</span>
                                    <span class="count-label">@(count == 1 ? "user" : "users")</span>
                                </div>
                                <div class="group-bar">
                                    <div class="group-bar-fill" style="width: @GetPercentage(count, statistics.TotalUsers)%"></div>
                                </div>
                                <div class="click-hint">Click to view permissions</div>
                            </div>
                        }
                    </div>
                </div>
            }
        }

        <div class="user-section-header">
            <h2>All Users</h2>
            <div class="user-count-badge">@users.Count @(users.Count == 1 ? "user" : "users")</div>
        </div>

        <div class="user-list">
            @foreach (var user in users)
            {
                <UserCard 
                    User="@user" 
                    OnEdit="@(() => ShowEditUserModal(user))"
                    OnDelete="@(() => DeleteUser(user.Id))"
                    OnGroupClick="@ShowGroupDetails" />
            }

            @if (users.Count == 0)
            {
                <div class="no-users">No users found. Add your first user!</div>
            }
        </div>
    }
</div>

@if (showModal)
{
    <UserModal 
        User="@selectedUser"
        Groups="@availableGroups"
        OnSave="@SaveUser"
        OnClose="@CloseModal" />
}

@if (showGroupModal && selectedGroupDetails != null)
{
    <GroupPermissionModal 
        Group="@selectedGroupDetails"
        AvailablePermissions="@availablePermissions"
        OnAddPermission="@AddPermissionToGroup"
        OnRemovePermission="@RemovePermissionFromGroup"
        OnClose="@CloseGroupModal" />
}

@code {
    private List<UserDto> users = new();
    private List<GroupDto> availableGroups = new();
    private List<PermissionDto> availablePermissions = new();
    private UserStatisticsDto? statistics;
    private UserDto? selectedUser;
    private GroupDetailDto? selectedGroupDetails;
    private bool showModal = false;
    private bool showGroupModal = false;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            users = await UserApi.GetUsersAsync();
            availableGroups = await UserApi.GetGroupsAsync();
            statistics = await UserApi.GetUserStatisticsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowAddUserModal()
    {
        selectedUser = null;
        showModal = true;
    }

    private void ShowEditUserModal(UserDto user)
    {
        selectedUser = user;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        selectedUser = null;
    }

    private async Task ShowGroupDetails(int groupId)
    {
        try
        {
            selectedGroupDetails = await UserApi.GetGroupDetailsAsync(groupId);
            availablePermissions = await UserApi.GetAvailablePermissionsForGroupAsync(groupId);
            showGroupModal = true;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading group details: {ex.Message}";
        }
    }

    private void CloseGroupModal()
    {
        showGroupModal = false;
        selectedGroupDetails = null;
        availablePermissions.Clear();
    }

    private async Task AddPermissionToGroup(int permissionId)
    {
        if (selectedGroupDetails == null) return;

        try
        {
            selectedGroupDetails = await UserApi.AddPermissionToGroupAsync(selectedGroupDetails.Id, permissionId);
            availablePermissions = await UserApi.GetAvailablePermissionsForGroupAsync(selectedGroupDetails.Id);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error adding permission: {ex.Message}";
        }
    }

    private async Task RemovePermissionFromGroup(int permissionId)
    {
        if (selectedGroupDetails == null) return;

        try
        {
            selectedGroupDetails = await UserApi.RemovePermissionFromGroupAsync(selectedGroupDetails.Id, permissionId);
            availablePermissions = await UserApi.GetAvailablePermissionsForGroupAsync(selectedGroupDetails.Id);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error removing permission: {ex.Message}";
        }
    }

    private async Task SaveUser(UserFormData formData)
    {
        try
        {
            if (selectedUser == null)
            {
                // Create new user
                var request = new CreateUserRequest(formData.Email, formData.GroupIds);
                await UserApi.CreateUserAsync(request);
            }
            else
            {
                // Update existing user
                var request = new UpdateUserRequest(formData.Email, formData.GroupIds, formData.Active);
                await UserApi.UpdateUserAsync(selectedUser.Id, request);
            }

            await LoadData();
            CloseModal();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving user: {ex.Message}";
        }
    }

    private async Task DeleteUser(int userId)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this user?");
        if (confirmed)
        {
            try
            {
                await UserApi.DeleteUserAsync(userId);
                await LoadData();
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting user: {ex.Message}";
            }
        }
    }

    private double GetPercentage(int count, int total)
    {
        if (total == 0) return 0;
        return Math.Round((double)count / total * 100, 1);
    }
}
